{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es6"
    ],
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "lib",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "strictNullChecks": false,
    "target": "es2016",
  },
  "include": [
    "src/**/*"
  ]
}
