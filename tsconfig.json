{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "preserve",
    "module": "es6",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": false,
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "sourceMap": true,
    "strict": true,
    "target": "es2016",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/phaser/types"
    ],
    "types": [
      "phaser"
    ],
  },
  "include": [
    "src/**/*"
  ]
}
